<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_qlvb" model="ir.module.category">
        <field name="name">Quản Lý Văn Bằng</field>
        <field name="description">Category dành cho các nhóm quản lý văn bằng</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_qlvb_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref="quan_ly_van_bang.module_category_qlvb"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_qlvb_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="module_category_qlvb"/>
        <field name="implied_ids" eval="[(4, ref('quan_ly_van_bang.group_qlvb_student'))]"/>
    </record>

    <record id="group_qlvb_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_qlvb"/>
        <field name="implied_ids" eval="[(4, ref('quan_ly_van_bang.group_qlvb_teacher'))]"/>
        <field name="implied_ids" eval="[(4, ref('quan_ly_van_bang.group_qlvb_student'))]"/>
    </record>

    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[
            (4, ref('quan_ly_van_bang.group_qlvb_admin')),
            (4, ref('quan_ly_van_bang.group_qlvb_teacher')),
        ]"/>
    </record>
    
    <record id="user_only_see_own_details" model="ir.rule">
        <field name="name">User can only see their own details</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="domain_force">[('id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('quan_ly_van_bang.group_qlvb_student'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>