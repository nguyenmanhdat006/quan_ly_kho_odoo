<odoo>
    <!-- Tree View -->
    <record id="view_certificate_archive_tree" model="ir.ui.view">
        <field name="name">certificate.archive.tree</field>
        <field name="model">certificate.archive</field>
        <field name="arch" type="xml">
            <tree string="Certificate Archive">
                <field name="certificate_id"/>
                <field name="student_id"/>
                <field name="certificate_type_id"/>
                <field name="issuing_organization_id"/>
                <field name="certificate_code"/>
                <field name="issue_date"/>
                <field name="expiration_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_certificate_archive_form" model="ir.ui.view">
        <field name="name">certificate.archive.form</field>
        <field name="model">certificate.archive</field>
        <field name="arch" type="xml">
            <form string="Certificate Archive">
                <header>
                    <button name="action_restore" type="object" string="Restore" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="certificate_id" readonly="1"/>
                        <field name="student_id" readonly="1"/>
                        <field name="certificate_type_id" readonly="1"/>
                        <field name="issuing_organization_id" readonly="1"/>
                        <field name="certificate_code" readonly="1"/>
                        <field name="issue_date" readonly="1"/>
                        <field name="expiration_date" readonly="1"/>
                        <field name="status" readonly="1"/>
                        <field name="file_url" readonly="1"/>
                        <field name="uploaded_image" widget="image" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="view_certificate_archive_action" model="ir.actions.act_window">
        <field name="name">Certificate Archive</field>
        <field name="res_model">certificate.archive</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>