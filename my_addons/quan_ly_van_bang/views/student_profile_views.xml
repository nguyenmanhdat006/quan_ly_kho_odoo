<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_tree_inherit" model="ir.ui.view">
        <field name="name">res.users.tree.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Users">
                    <field name="name" />
                    <!-- <field name="role" /> -->
                    <field name="email" />
                    <field name="phone" />
                </tree>
            </xpath>
        </field>
    </record>

    <record id="action_open_student_list_view" model="ir.actions.act_window">
        <field name="name">Danh sách người dùng</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

</odoo>