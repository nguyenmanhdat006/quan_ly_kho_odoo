<odoo>
    <record id="view_certificate_form" model="ir.ui.view">
        <field name="name">Certificate Form</field>
        <field name="model">quanly.certificate</field>
        <field name="arch" type="xml">
            <form string="Certificate">
                <header>
                    <!-- Nút revoke certificate -->
                    <button name="action_revoke_certificate"
                            string="Revoke Certificate"
                            type="object"
                            class="btn btn-danger"
                            groups="quan_ly_van_bang.group_qlvb_teacher,quan_ly_van_bang.group_qlvb_admin"/>
                    
                    <!-- Nút set valid -->
                    <button name="action_set_valid"
                            string="Valid Certificate"
                            type="object"
                            class="btn btn-success"
                            groups="quan_ly_van_bang.group_qlvb_teacher,quan_ly_van_bang.group_qlvb_admin"/>
                </header>
                <sheet>
                    <group>
                        <field name="student_id" widget="Many2one" create = "False"/>
                        <field name="certificate_type_id" />
                        <field name="issuing_organization_id"/>
                        <field name="certificate_code" />
                        <field name="issue_date" />
                        <field name="expiration_date" />
                        <field name="status" />
                        <field name="file_url" />
                        <field name="uploaded_image" widget="image" />
                        <!-- Trường ẩn để tránh lỗi domain -->
                        <field name="available_organization_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_certificate_tree" model="ir.ui.view">
        <field name="name">Certificate Tree</field>
        <field name="model">quanly.certificate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id" />
                <field name="certificate_type_id" />
                <field name="certificate_code" />
                <field name="status" />
            </tree>
        </field>
    </record>
    <record id="action_certificate" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">quanly.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_certificate_search" model="ir.ui.view">
        <field name="name">certificate.search</field>
        <field name="model">quanly.certificate</field>
        <field name="arch" type="xml">
            <search string="Search Certificates">
                <field name="student_id" />
                <field name="certificate_type_id" />
                <field name="issuing_organization_id" />
                <field name="status" />
            </search>
        </field>
    </record>
</odoo>