<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">Student Form</field>
        <field name="model">quanly.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="date_of_birth" />
                        <field name="national_id" />
                        <field name="email" />
                        <field name="phone_number" />
                        <field name="address" />
                    </group>
                    <notebook>
                        <page string="Certificates">
                            <field name="certificate_ids">
                                <tree editable="bottom">
                                    <field name="certificate_type_id" />
                                    <field name="certificate_code" />
                                    <field name="issue_date" />
                                    <field name="expiration_date" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">Student Tree</field>
        <field name="model">quanly.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="email" />
                <field name="phone_number" />
            </tree>
        </field>
    </record>
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">quanly.student</field>
        <field name="view_mode">tree,form</field>

    </record>
    <record id="view_student_search" model="ir.ui.view">
        <field name="name">student.search</field>
        <field name="model">quanly.student</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="name" />
                <field name="email" />
                <field name="phone_number" />
            </search>
        </field>
    </record>


</odoo>